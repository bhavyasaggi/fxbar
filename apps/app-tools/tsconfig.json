{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@lib/repo-config/tsconfig-nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"],
      "@lib/repo-tools/": ["../../libs/repo-tools/*"],
      "@fxbar/mbox-web/*": ["../../packages/mbox-web/src/*"],
      "@fxbar/styles/*": ["../../packages/styles/src/*"],
      "@fxbar/utils/*": ["../../packages/utils/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    ".lintstagedrc.js",
    "**/*.ts",
    "**/*.tsx",
    "**.*.mjs",
    "**/*.js",
    "**/*.jsx"
  ],
  "exclude": ["node_modules", "out", "dist", "build", "coverage"]
}
