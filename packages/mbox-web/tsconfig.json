{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@lib/repo-config/tsconfig-base.json",
  "root": true,
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "strict": true
  },
  "include": ["**/*.ts", "**/*.d.ts", "**/*.mjs", "**/*.js", "**/*.json"],
  "exclude": ["node_modules", "dist"]
}
